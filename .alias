function tmpFile {
    local myTempFile=`mktemp /tmp/FILE.XXXXXX`
    cat << EOT
Create temp file ${myTempFile}
EOT
}

function tmpDir {
    local myTempDir=`mktemp /tmp/DIR.XXXXXX`
    cat << EOT
Create temp directory ${myTempDir}
EOT
}

function brewme {
    local service=${*}
