export ALIAS="${HOME}/.alias"
export ENVRC="${HOME}/.envrc"
export VIMRC="${HOME}/.vimrc"
export ZSHRC="${HOME}/.zshrc"
export BIN="${HOME}/bin"
export DOWNLOADS="${HOME}/Downloads"
export GITHUB="/Users/shaughan/Documents/GitHub"

####################################################################################################

alias ls="ls -aF"
alias ll="ls -aFl"
