function v {
    vim -R ${*}
}

function binR {
    local f=${1}
    local F=${BIN}/README.${f}
    local BINR_template=${BIN}/README.TEMPLATE
    if [ ! -e ${F} ] ; then
        cp ${BINR_template} ${F}
        chmod 755 ${F}
    fi
    vibinR ${f}
}

function vibin {
    local f=${BIN}/${1}
    if [ ! -e ${f} ] ; then
        cat << EOT
ERROR:  File ${f} DNE.
EOT
    else
        vim ${f}
    fi
}

function vibinR {
    local f=${1}
    vibin "README.${f}"
}

function lsR {
    pushd . > /dev/null
    cd ${BIN}
    ls README.*
    popd > /dev/null
}

