}

function sa {
    [ -r ${ALIAS} ] && . ${ALIAS}
}

function se {
    [ -r ${ENVRC} ] && . ${ENVRC}
}

function sz {
    [ -r ${ZSHRC} ] && . ${ZSHRC}
}

function va {
    vim ${ALIAS}
